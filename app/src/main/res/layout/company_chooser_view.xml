<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_company_chooser_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/ibtn_exit_company_comp_choose_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:padding="20dp"
        android:contentDescription="@string/choose_comp_leave_company_btn_desc"
        android:src="@drawable/ic_exit_company"
        />

    <TextView
        android:id="@+id/tv_name_comp_choose_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:padding="20dp"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Roga and Kopita"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/swt_active_comp_choose_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:checked="false"
        android:layout_weight="2" />
</LinearLayout>