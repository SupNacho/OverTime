<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.AllEmployeesChartFragment">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_all_employee_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_menu_share"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart_all_empl_chart_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16" />

        <TextView
            android:id="@+id/tv_empl_label_all_empl_chart_fragment"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Employee info: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_name_all_empl_chart_fragment"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="User Unknown" />

        <TextView
            android:id="@+id/tv_summary_label_all_empl_chart_fragment"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Summary time: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_summary_all_empl_chart_fragment"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="46:45:12" />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>